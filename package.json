{
	"name": "vine-lang",
	"version": "1.0.30",
	"description": "a language parser and runtime",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"module": "dist/index.mjs",
	"keywords": [
		"utils",
		"tokenlize",
		"parser",
		"ast",
		"language"
	],
	"packageManager": "pnpm@10.14.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/xiaoxustudio/vine-lang.git"
	},
	"bugs": {
		"url": "https://github.com/xiaoxustudio/vine-lang/issues"
	},
	"homepage": "https://github.com/xiaoxustudio/vine-lang#readme",
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"watch": "tsup -w",
		"prebuild": "cross-env NODE_ENV=development tsup && tsc-alias",
		"dev": "pnpm prebuild && node dist/index.js",
		"build": "cross-env NODE_ENV=production tsup && tsc-alias",
		"exebuild": "pnpm build && node ./scripts/build.js",
		"ipt": "pnpm dev ipt",
		"repl": "pnpm dev repl",
		"debug": "pnpm dev debug",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs",
		"format": " prettier --write --config .prettierrc \"src/**/*.ts\"",
		"test": "vitest",
		"prepare": "husky"
	},
	"files": [
		"dist"
	],
	"author": "xuran",
	"license": "MIT",
	"devDependencies": {
		"@swc/core": "^1.13.2",
		"@types/node": "^22.15.29",
		"@types/ws": "^8.18.1",
		"@yao-pkg/pkg": "^6.5.1",
		"cross-env": "^7.0.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.4",
		"prettier": "^3.6.2",
		"tsc-alias": "^1.8.16",
		"tsup": "^8.5.0",
		"typescript": "^5.8.3",
		"vitepress": "^1.6.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"ws": "^8.18.3"
	},
	"lint-staged": {
		"*.ts": [
			"pnpm format",
			"git add -u"
		]
	}
}
